<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/live_link_mic_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    tools:context=".LiveLinkMic.LiveLinkMicActivity">

    <ScrollView
        android:id="@+id/scroll_control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 功能说明 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/live_link_mic_desc"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />

            <!-- 角色选择 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/role_label"
                    android:textSize="15sp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/role_anchor_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="8dp"
                    android:text="@string/role_anchor"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_role_selected" />

                <TextView
                    android:id="@+id/role_guest_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="8dp"
                    android:text="@string/role_guest"
                    android:gravity="center"
                    android:textColor="@color/text_gray"
                    android:background="@drawable/bg_role_unselected" />
            </LinearLayout>

            <!-- ChannelID 输入 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/channel_id_label"
                    android:textSize="15sp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/channel_id_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:background="@drawable/edittext_border" />
            </LinearLayout>

            <!-- 加入频道按钮 -->
            <TextView
                android:id="@+id/join_room_btn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:text="@string/video_chat_join_channel"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:background="@color/layout_base_blue" />

            <!-- 跨频道订阅区域（主播专用） -->
            <LinearLayout
                android:id="@+id/ll_cross_channel_subscribe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cross_channel_subscribe_title"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <!-- 目标频道ID -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="@string/peer_channel_label"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/peer_channel_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:padding="8dp"
                        android:textSize="13sp"
                        android:hint="@string/peer_channel_hint"
                        android:background="@drawable/edittext_border" />
                </LinearLayout>

                <!-- 目标用户ID -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="@string/peer_uid_label"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/peer_uid_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:padding="8dp"
                        android:textSize="13sp"
                        android:hint="@string/peer_uid_hint"
                        android:background="@drawable/edittext_border" />
                </LinearLayout>

                <!-- PK订阅按钮 -->
                <TextView
                    android:id="@+id/btn_start_pk_subscribe"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/start_pk_subscribe"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:background="@color/pk_subscribe_color"
                    android:enabled="false"
                    android:alpha="0.5" />
            </LinearLayout>

            <!-- CDN旁路转推区域（主播专用） -->
            <LinearLayout
                android:id="@+id/ll_publish_live_stream"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/publish_live_stream"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <!-- 推流URL输入 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="@string/publish_stream_url"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/stream_url_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:padding="8dp"
                        android:textSize="13sp"
                        android:hint="@string/publish_stream_url_hint"
                        android:background="@drawable/edittext_border" />
                </LinearLayout>

                <!-- 旁路控制按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_start_publish"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        android:text="@string/start_publish"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:background="@color/layout_base_blue"
                        android:enabled="false"
                        android:alpha="0.5" />

                    <TextView
                        android:id="@+id/btn_stop_publish"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:text="@string/stop_publish"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:background="@color/layout_base_blue"
                        android:enabled="false"
                        android:alpha="0.5" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 视频显示区域 -->
    <ScrollView
        android:id="@+id/scroll_remote_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/scroll_control_panel"
        app:layout_constraintBottom_toBottomOf="parent">

        <GridLayout
            android:id="@+id/grid_video_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:orientation="horizontal"
            android:padding="8dp" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
